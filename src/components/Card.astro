---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import "@styles/global.css";

const {
  topImg,
  bottomImg,
  title,
  icons = [],
  bullets = [],
  buttonUrl = "#",
} = Astro.props;
---

<a
  href={buttonUrl}
  class="bg-white rounded-[8px] shadow-lg overflow-hidden transition-transform duration-200 sm:hover:scale-105 group"
>
  <div class="flex flex-row gap-0.5 md:flex-col md:gap-0">
    <Image
      loading="eager"
      decoding="sync"
      fetchpriority="high"
      src={topImg}
      alt={title}
      class="h-70 object-cover w-1/2 md:w-full"
    />
    <Image
      loading="eager"
      decoding="sync"
      fetchpriority="high"
      src={bottomImg}
      alt={title}
      class="h-70 object-cover mt-0 md:mt-0.5 w-1/2 md:w-full"
    />
  </div>
  <div class="p-6 flex flex-col flex-1">
    <h2 class="text-2xl sm:text-3xl font-bold mb-4 group-hover:underline">
      {title}
    </h2>
    <div class="grid grid-cols-2 gap-4 mb-6">
      {
        icons.map(({ icon, label }) => (
          <div class="flex items-center space-x-2">
            <Icon name={icon} class="flex items-center space-x-2" />
            <span class="text-sm">{label}</span>
          </div>
        ))
      }
    </div>
    <ul class="list-disc list-inside text-gray-700 space-y-1">
      {bullets.map((bullet: any) => <li>{bullet}</li>)}
    </ul>
  </div>
</a>
