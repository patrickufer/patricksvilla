---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import "../styles/global.css";

const {
  topImg,
  bottomImg,
  title,
  icons = [],
  bullets = [],
  buttonUrl = "#",
} = Astro.props;
---

<div class="bg-white rounded-[8px] shadow-lg overflow-hidden">
  <Image src={topImg} alt={title} class="w-full h-60 object-cover" />
  <Image src={bottomImg} alt={title} class="w-full h-60 object-cover mt-0.5" />
  <div class="p-6 flex flex-col flex-1">
    <a href={buttonUrl}>
      <h2 class="text-3xl font-bold mb-4 hover:underline">{title}</h2>
    </a>
    <div class="grid grid-cols-2 gap-4 mb-6">
      {
        icons.map(({ icon, label }) => (
          <div class="flex items-center space-x-2">
            <Icon name={icon} class="flex items-center space-x-2" />
            <span class="text-sm">{label}</span>
          </div>
        ))
      }
    </div>
    <ul class="list-disc list-inside text-gray-700 mb-8 space-y-1">
      {bullets.map((bullet) => <li>{bullet}</li>)}
    </ul>
    <div class="mt-auto flex justify-center">
      <a
        href={buttonUrl}
        class="bg-[#009] text-white px-6 py-2 rounded-full font-semibold hover:bg-blue-700 transition"
      >
        Learn More
      </a>
    </div>
  </div>
</div>
