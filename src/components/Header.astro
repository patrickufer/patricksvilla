---
const { pathname } = Astro.url;

const menu = [
  {
    name: "Home",
    url: "/patricksvilla",
  },
  {
    name: "Photo Gallery",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "The Villa",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Location",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Attractions",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Contact Us",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Rates",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Availability",
    url: "/patricksvilla/availability",
  },
  {
    name: "Who is Patrick?",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "FAQ",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Golf",
    url: "/patricksvilla/cape-coral/villa",
  },
  {
    name: "Shopping",
    url: "/patricksvilla/cape-coral/villa",
  },
];
---

<header transition:persist>
  <a href="/patricksvilla"><h1>www.PatricksVilla.com</h1></a>
  <nav>
    <ul>
      {
        menu.map((item) => (
          <li class="">
            <a
              href={item.url}
              class={`${
                (pathname === `${item.url}/` || pathname === item.url) &&
                "active"
              }`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
<style>
  header {
    margin-left: auto;
    margin-right: auto;
    max-width: 800px;
    padding-left: 1rem;
    padding-right: 1rem;

    a {
      text-decoration: none;
    }

    h1 {
      color: #000099;
      text-align: center;
    }

    ul {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      list-style: none;
      gap: 16px;
      text-align: center;
    }

    li {
      width: 60px;
    }
  }
</style>
